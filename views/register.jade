extends layout

block content
	div.container-fluid
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Crea un account
				div.signup-wall
					form(class='form-signin', action='/signup', method='POST')
						label Username
						input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
						label Password
						input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
						label E-mail
						input(type='email', name='email', class='form-control', placeholder='Email',required)
						label Nome
						input(type='text', name='firstName', class='form-control', placeholder='Nome',required)
						label Cognome
						input(type='text', name='lastName', class='form-control', placeholder='Cognome',required)
						br
						button(class='btn btn-lg btn-primary btn-block', type='submit') Crea
						span.clearfix
				#message
					if message
						h1.text-center.error-message #{message}